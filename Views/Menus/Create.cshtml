@model CoffeeBranch.Models.Menu

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center">Create</h1>

<h4>Menu</h4>
<hr />
<div class="row"  style="font-family:cursive;">
    <div class="col-md-4" style="background-color:blanchedalmond;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlavourType" class="control-label"></label>
                @*<input asp-for="FlavourType" class="form-control" />*@
                <select asp-for="FlavourType" class="form-control" asp-items="ViewBag.FlavourTypeList">
                    <option>Select one</option>
                    <option>  HotChoclate</option>
                    <option> FrenchVanilla</option>
                    <option>CaramelMacchiato</option>
                    <option> PumpkinSpice</option>
                    <option>Hazelnut</option>
                    <option>Mocha</option>
                </select>
                <span asp-validation-for="FlavourType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchId" class="control-label"></label>
                <select asp-for="BranchId" class ="form-control" asp-items="ViewBag.BranchId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
